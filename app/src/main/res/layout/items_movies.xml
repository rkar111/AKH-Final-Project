<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/poster_height"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="#4D000000"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_gits" />

        <ImageView
            android:id="@+id/iv_imdb"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_imdb_logo" />

        <TextView
            android:id="@+id/tv_imdb_rate"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_imdb"
            android:layout_alignLeft="@id/iv_imdb"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="6.7"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_3x" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_movie_info"
            android:layout_marginLeft="16dp"
            android:text="Ghost in the Shell"
            android:textColor="@color/white"
            android:textSize="@dimen/text_heading_1x"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_movie_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_movie_time"
            android:layout_alignLeft="@id/tv_movie_name"
            android:layout_marginTop="8dp"
            android:text="(Mystery , Crime , Live-action)"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_movie_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_name"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:text="180 min"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x" />

